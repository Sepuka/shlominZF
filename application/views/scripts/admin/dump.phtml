<script language="javascript" type="text/javascript">
Ext.onReady(function() {
    var currentDumpKey = 0;

    var loadMask = new Ext.LoadMask(
	    Ext.getBody(),
	    {
	        msg: 'Пожалуйста, подождите. Идет загрузка ...'
	    });

    var toolbar = Ext.create('Ext.toolbar.Toolbar', {
		items: [
		{
			itemId: 'key',
			xtype: 'textfield',
			fieldLabel: 'имя документа'
		},{
			xtype: 'tbseparator'
		},{
			xtype: 'button',
			text: 'Сохранить изменения',
			handler: function() {
				loadMask.show();
				toolbar.disable(true);
				Ext.Ajax.request({
					url: '/ajax/dumpUpdateDocument',
					method: 'POST',
                    params: {
                        value: htmlEditor.getValue(),
                        key: toolbar.getComponent('key').getValue()
                    },
                    success: function(answer) {
                    },
                    failure: function(failure) {
                    	answer = Ext.JSON.decode(failure.responseText);
                        Ext.Msg.alert(answer['key'], answer['value']);
                    },
                    callback: function() {
                        loadMask.hide();
                        toolbar.enable(true);
                        comboBoxStore.load();
                    }
				})
			}
		},{
			xtype: 'button',
			text: 'Перезагрузить страницу',
			handler: function() {
                loadArticle(currentDumpKey);
            }
		}]
	});

	function loadArticle(key)
	{
	    loadMask.show();
	    toolbar.disable(true);
	    Ext.Ajax.request({
            url: '/ajax/dumpGetDocument',
        method: 'GET',
        params: {
            key: key,
        },
        success: function(answer) {
            // Ответ приходит в виде JSON-массива
            answer = Ext.JSON.decode(answer.responseText);
            htmlEditor.setValue(answer['value']);
            toolbar.items.get('key').setValue(answer['key']);
            toolbar.enable(true);
            htmlEditor.setDisabled(false);
        },
        failure: function(failure) {
            answer = Ext.JSON.decode(failure.responseText);
            Ext.Msg.alert(answer['key'], answer['value']);
            htmlEditor.setDisabled(true);
        },
        callback: function() {
            loadMask.hide();
        }
        })
	}

    Ext.define('comboBoxModel', {
        extend: 'Ext.data.Model',
        fields: [
            {name: 'key', type: 'string'},
        ]
    });

    var comboBoxStore = Ext.create('Ext.data.Store', {
        model: 'comboBoxModel',
        proxy: {
            type: 'ajax',
            url: '/ajax/dumpKeysList',
            reader: {
                type: 'json',
                root: 'keys',
                successProperty: 'success',
                totalProperty: 'total'
            }
        },
        autoLoad: true
    });

    var mongoKeyTpl = new Ext.XTemplate(
    '<tpl for=".">',
        '<div style="margin-bottom: 6px;" class="mongoKey">',
          '<span>{key}</span>',
        '</div>',
    '</tpl>'
    );

    var keysList = Ext.create('Ext.view.View', {
        width: 200,
        autoScroll: true,
        itemSelector: 'div.mongoKey',
        store: comboBoxStore,
        tpl: mongoKeyTpl,
        listeners: {
            itemclick: function(obj, record, item, index, e, eOpts) {
                currentDumpKey = record.get('key');
                loadArticle(record.get('key'));
            }
        }
    });

	var htmlEditor = Ext.create('Ext.form.HtmlEditor', {
		
	});

	var viewport = Ext.create('Ext.container.Viewport', {
		layout: 'border',
		items: [{
            region: 'north',
            items: linksBar
    	},{
			region: 'west',
			itemId: 'westMenuPanel',
			width: 200,
			title: 'Ключи служебной информации',
			items: keysList
		},{
			region: 'center',
			itemId: 'centerMenuPanel',
			items: [htmlEditor],
			bbar: toolbar
		}]
	});

	keysList.setHeight(viewport.getComponent('westMenuPanel').getHeight());
	htmlEditor.setHeight(viewport.getComponent('centerMenuPanel').getHeight());
	htmlEditor.setWidth(viewport.getComponent('centerMenuPanel').getWidth());
});
</script>